<div id='sidetopp'>
  <%= render :partial => 'kompetansemaal/selected_kompetansemaal' %>
</div>

<div id='resultater'>  
  <div id="kompetansemaal_treff">
    <h2><%= t('overskrifter.kompetansemål') %></h2>
    <%=  render :partial => "kompetansemaal/simple_grid" %>
  </div>
</div>

<% unless @through_laereplan %>
  <p>
    <h2><%= t("overskrifter.filtrer_på_læreplan") %></h2>
    <ul class="linke-liste">  
        <% @kompetansemaalsett.laereplaner.each do |laereplan| %>
        
           <% if(@through_hovedomraade)
                link = laereplan_hovedomraade_kompetansemaalsett_path(laereplan, @hovedomraade, @kompetansemaalsett)
              else
                link = laereplan_kompetansemaalsett_path(laereplan, @kompetansemaalsett)
              end
           %>
    
        <li><%= link_to "#{laereplan.kode}: #{laereplan.tittel}", link %></li>
      <% end %>
    </ul>
  </p>
<% end %>



